<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img5"
    tools:context=".Blood_don">




    <RadioGroup
        android:layout_width="346dp"
        android:layout_height="305dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#FFFF">


        <RadioButton
            android:id="@+id/signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:onClick="user_signup"
            android:layout_marginRight="50dp"
            android:text="User(SignUp)"
            android:textSize="23dp"
            android:textColor="#000"
            />




        <RadioButton
            android:id="@+id/ulogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="50dp"
            android:text="User(Login)"
            android:textSize="23dp"
            android:textColor="#000"
            android:onClick="user_login"


            />





        <RadioButton
            android:id="@+id/alogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="50dp"
            android:text="Admin(Login)"
            android:textSize="23dp"
            android:textColor="#000"
            android:onClick="admin_login"


            />

    </RadioGroup>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="57dp"
        android:layout_marginRight="10dp"
        android:text=" WELCOME TO BLOOD DONATION"
        android:textColor="#FFFF"
        android:textSize="25sp"
        android:textStyle="bold" />













</RelativeLayout>